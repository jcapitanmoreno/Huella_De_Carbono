<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.jcapitanmoreno.views.HabitoController">

    <children>
        <Label layoutX="50.0" layoutY="50.0" text="Tipo:" />
        <ComboBox fx:id="tipoComboBox" layoutX="150.0" layoutY="50.0" />

        <Label layoutX="50.0" layoutY="100.0" text="Frecuencia:" />
        <TextField fx:id="frecuenciaField" layoutX="150.0" layoutY="100.0" />

        <Label layoutX="50.0" layoutY="150.0" text="Fecha:" />
        <DatePicker fx:id="fechaPicker" layoutX="150.0" layoutY="150.0" />

        <Label layoutX="50.0" layoutY="200.0" text="Actividad:" />
        <ComboBox fx:id="actividadComboBox" layoutX="150.0" layoutY="200.0" />

        <Button layoutX="150.0" layoutY="250.0" onAction="#handleAddHabito" text="Añadir Hábito" />
        <Button layoutX="24.0" layoutY="354.0" mnemonicParsing="false" text="Volver" />
    </children>
</AnchorPane>